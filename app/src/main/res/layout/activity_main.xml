<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobileappscompany.w4d1makingrestcalls.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for the response"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Http Native"
        android:onClick="onHttpNative"
        android:id="@+id/btnHttpNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Ok Http Sync"
        android:onClick="onOkHttpSync"
        android:id="@+id/btnOkHttpSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Ok Http ASync"
        android:onClick="onOkHttpSync"
        android:id="@+id/btnOkHttpASync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Retrofit Async"
        android:id="@+id/btnRetrofitASync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
    android:text="Retrofit Sync"
        android:onClick="onRetrofitSync"
        android:id="@+id/btnRetrofitSync"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</LinearLayout>
